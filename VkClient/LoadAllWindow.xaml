<Window x:Class="VkClient.LoadAllWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VkClient"
        mc:Ignorable="d"
        Title="LoadAllWindow" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="User id:" Margin="0,0,0,200" Height="20" Width="100" TextAlignment="Center"/>
        <TextBox Width="100" Height="25" Margin="0,0,0,130"/>
        <ProgressBar Name="pb" Width="200" Height="25" />
        <Button Margin="0,100,0,0" Height="20" Width="40" Content="Start"/>
    </Grid>
</Window>
